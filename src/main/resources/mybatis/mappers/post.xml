<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="post">
	
	<select id="searchPost" parameterType="categoryvo" resultType="postvo">
	<![CDATA[
	SELECT post_no, category_no, title, content, DATE_FORMAT(reg_date, '%Y-%m-%d %h:%i:%s') AS reg_date FROM post WHERE category_no=#{category_no}
	]]>
	</select>
	
		<select id="insert" parameterType="postvo">
	<![CDATA[
	INSERT INTO post VALUES(null, #{category_no}, #{title}, #{content}, now())]]>
	</select>
</mapper>